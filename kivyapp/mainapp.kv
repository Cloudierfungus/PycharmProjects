                MDTopAppBar:
                    icon: 'git'
                    #size: dp(400), dp(400)
                    mode: 'free-end'
                    title: 'Members'
                    #adaptive_size: True
                    overflow_cls: app.OvrFlow()
                    left_action_items: [["plus", lambda x: layout.ad() ]]
                    #left_action_items: [["plus", lambda x: layout.add_widget(scr.Widget()) ]]
                    right_action_items: [["minus", lambda x: layout.rem()], ['menu', lambda x: print(layout.children)]]

                MDBottomNavigation:
